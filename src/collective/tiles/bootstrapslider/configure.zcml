<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="collective.tiles.bootstrapslider">

  <i18n:registerTranslations directory="locales" />

  <include package="plone.app.tiles" />
  <include package="plone.tiles" />
  <include package=".tile" />


  <genericsetup:registerProfile
      name="default"
      title="collective.tiles.bootstrapslider"
      directory="profiles/default"
      description="Installs the collective.tiles.bootstrapslider add-on."
      provides="Products.GenericSetup.interfaces.EXTENSION"
      post_handler=".setuphandlers.post_install"
      />

  <genericsetup:registerProfile
      name="uninstall"
      title="collective.tiles.bootstrapslider (uninstall)"
      directory="profiles/uninstall"
      description="Uninstalls the collective.tiles.bootstrapslider add-on."
      provides="Products.GenericSetup.interfaces.EXTENSION"
      post_handler=".setuphandlers.uninstall"
      />

  <utility
      factory=".setuphandlers.HiddenProfiles"
      name="collective.tiles.bootstrapslider-hiddenprofiles"
      />

  <!-- -*- extra stuff goes here -*- -->

</configure>
